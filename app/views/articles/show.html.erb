<h2 align="center"><%= @article.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">
	<div class="description">
		<h3>
			<small><%= simple_format(@article.description) %></small>
		</h3>
	</div>

	<div class="article-actions">
		<%= link_to 'Edit Post', edit_article_path, class: "btn btn-xs btn-primary" %>
		<%= link_to 'Delete Post', article_path, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
		<%= link_to 'All Posts', articles_path, class: "btn btn-xs btn-success" %>
	</div>
</div>