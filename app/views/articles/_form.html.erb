<% if @article.errors.any? %>
<h3>Something went wrong:</h3>
<ul>
	<% @article.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
<% end %>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |post| %>
			<div class="form-group">
				<div class="col-sm-12">
					<%= post.text_field :title, placeholder: "Title", class:"form-control", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<%= post.text_area :description,rows: 10, placeholder: "description", class:"form-control" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<%= post.submit "Save", class: "btn btn-primary btn-lg" %>
				</div>
			</div>
		<% end %>
	</div>
</div>